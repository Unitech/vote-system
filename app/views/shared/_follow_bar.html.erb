<div id="followbar">
  <span id="left-links">
    <%= render_navigation :level => 1, :renderer => :links %>
    
    <a href="<%= all_feed_path %>" target="_blank">
      <%= t('Rss feed') %>
      <span class="regulate">
	<%= image_tag "rss_icon.png", :style => 'left : 2px' %>
      </span>
    </a>
    <a href="<%= best_feed_path %>" target="_blank">
      <%= t('Best feed') %>
      <span class="regulate">
	<%= image_tag "rss_icon.png", :style => 'left : 4px' %>
      </span>
    </a>
    
    &nbsp;<a href="http://twitter.com/VoteSystem" class="twitter-follow-button" data-button="grey" data-text-color="#FFFFFF" data-link-color="#00AEFF" data-show-count="false"></a>
    
    <!-- <a id="twitter" href="http://twitter.com/intent/tweet?status=Emacs VoteSystem - http://emacs.vote-system.com : Compare all stuff related to Emacs ! +via+%40strzel_a&url=http://emacs.vote-system.com&via=VoteSystem" target="_blank">Share <%= image_tag 'twitter16.png' %></a> -->

    </span>
    <span id="right-links">
    <% if user_signed_in? %>
      <%= link_to t("Post a new article"), new_article_path %>
      <%= link_to t("Favourite posts"), favourite_articles_path %>
      <a href="<%= by_person_path %>/<%=current_user.username %>"><%= t("My posts") %></a>
    <% end %>
    
    <% if user_signed_in? %>
      <a href="<%= profil_show_path(current_user.username) %>" style="margin-right : 5px;">
	<%= t('Logged as') %> <%= current_user.username %> (<%= current_user.reputation %> <%= image_tag "star.png" %>)
      </a>
      
      <%= link_to t('Logout'), destroy_user_session_path %>
      
    <% else %>
      <%= link_to t('Login'), new_user_session_path  %> 
      <%= link_to t('Register'), new_user_registration_path  %>
      <a href="<%= user_omniauth_authorize_path(:facebook) %>">
	<%= t('Register with') %>
	<%= image_tag "login/login_fb.png" %>
      </a>
    <% end %>	
  </span>
</div>

<script src="http://platform.twitter.com/widgets.js" type="text/javascript"></script>
